<div class="container-fluid">
	<h1>Cards Testing Ember-Paper</h1>
	<div class="row">
		<div class="col-md-3">
			<div  layout="column">
				{{#paper-card}}
					{{#paper-card-title}}
						{{#paper-card-title-text}}
							<h2>This is the card's title</h2>
						{{/paper-card-title-text}}
					{{/paper-card-title}}
					{{#paper-card-content}}
							<p>	This is the content of the card</p>
					{{/paper-card-content}}
					<div class="md-actions" layout="row" layout-align="end center">
			      		{{#paper-button}}Action 1{{/paper-button}}
			      		{{#paper-button}}Action 2{{/paper-button}}
			    	</div>
				{{/paper-card}}
			</div>
		</div>	
		<div class="col-md-9 card">
			<div class="card" layout="column">
				{{#paper-card}}
					{{#paper-card-content}}
					<div>
						<h2>Paper card row layout row</h2>
					</div>
					<div>
						<p>nowwwwwwwwwwwwwwwwww</p>
					</div>
					<div  layout="row" layout-align="end center">
						<div class="star-container">
							{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
							{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
							{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
							{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
						</div>
						{{!-- {{#paper-button }}Button{{/paper-button}} --}}
						{{#paper-select  placeholder="Rate"}}
							{{#paper-option name="rating" value=5}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
							{{/paper-option}}
							{{#paper-option}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
								{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
							{{/paper-option}}
						{{/paper-select}}
					</div>
					{{/paper-card-content}}
				{{/paper-card}}
			</div>
		</div>

		<div class="col-md-9">
			<div class="card" layout="column">
				{{#paper-card}}
					{{#paper-card-content}}
					<div>
						<h2>Paper card row layout row</h2>
					</div>
					<div>
						<p>nowwwwwwwwwwwwwwwwww</p>
					</div>
					<div  layout="row" layout-align="end center">
						<div class="star-container">
							{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
							{{#paper-icon "star" class="star-icon"}}{{/paper-icon}}
						</div>
						{{#paper-button}}Button{{/paper-button}}
					</div>
					{{/paper-card-content}}
				{{/paper-card}}
			</div>
		</div>
	</div>
</div>